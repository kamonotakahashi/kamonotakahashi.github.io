{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@": [
                "src"
            ]
        },
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "sourceMap": true,
        "strict": true,
    },
    "files": [
        "src/shims-vue.d.ts"
    ],
    "include": [
        "src/**/*.ts*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}